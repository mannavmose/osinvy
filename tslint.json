{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "jsRules": {},
  "rules": {
    // Disallow parens for single-arg arror functions.
    "arrow-parens": [true, "ban-single-arg-parens"],
    "jsx-boolean-value": false,
    "interface-name": false,
    // Disable the public, private, protected enforcer
    "member-access": false,
    // Prefer let all the time.
    "prefer-const": false,
    "object-literal-sort-keys": false,
    // Single-quote strings except for jsx attributes or when escaping "'",
    // don't use `` if not necessary.
    "quotemark": [true, "single", "jsx-double", "avoid-escape", "avoid-template"]
  },
  "rulesDirectory": []
}
